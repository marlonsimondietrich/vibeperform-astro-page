---
import '../styles/global.css';
import WorkshopsPage from '../components/WorkshopsPage.astro';
import { workshopsContent } from '../data/workshopsContent';

const content = workshopsContent.en;
const homeHref = '/vibeperform-astro-page/';
const alternateLocaleHref = '/vibeperform-astro-page/de/workshops';
const faviconHref = `${import.meta.env.BASE_URL}favicon.png`;
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href={faviconHref} />
		<title>{content.metaTitle}</title>
	</head>

	<body class="bg-white text-slate-900">
		<WorkshopsPage
			content={content}
			homeHref={homeHref}
			alternateLocaleHref={alternateLocaleHref}
			currentLocale="en"
		/>
	</body>
</html>
