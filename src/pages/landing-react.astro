---
import '../styles/global.css';
import ReactLandingPage from '../components/ReactLandingPage';

const faviconHref = `${import.meta.env.BASE_URL}favicon.png`;
---

<html lang="de">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href={faviconHref} />
		<title>Vibeperform Landing (React)</title>
	</head>

	<body class="bg-slate-900 text-slate-300 antialiased">
		<ReactLandingPage client:load />
	</body>
</html>
