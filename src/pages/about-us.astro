---
import '../styles/global.css';
import NavBar from '../components/NavBar.astro';
import { aboutContent } from '../data/aboutContent';

const { nav, hero, values, cta } = aboutContent.en;
const homeHref = '/vibeperform-astro-page/';
const alternateLocaleHref = '/vibeperform-astro-page/de/ueber-uns';
const faviconHref = `${import.meta.env.BASE_URL}favicon.png`;
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href={faviconHref} />
		<title>{aboutContent.en.metaTitle}</title>
	</head>

	<body class="bg-white text-slate-900">
		<div class="flex min-h-screen flex-col bg-white">
			<NavBar nav={nav} homeHref={homeHref} alternateLocaleHref={alternateLocaleHref} />
			<main class="flex flex-1 flex-col gap-y-24 pb-20">
				<section class="section-spacing">
					<div class="container-responsive mx-auto max-w-4xl space-y-4 text-center">
						<p class="text-xs font-semibold uppercase tracking-[0.35em] text-slate-500 sm:text-sm">{hero.kicker}</p>
						<h1 class="text-4xl font-semibold md:text-5xl">{hero.title}</h1>
						<p class="text-base text-slate-600 sm:text-lg md:text-xl">{hero.intro}</p>
					</div>
				</section>

				<section class="section-spacing">
					<div class="container-responsive grid gap-8 md:grid-cols-2">
						{values.map((value) => (
							<div class="space-y-3 rounded-3xl border border-slate-200 bg-white p-6 shadow-sm sm:p-8">
								<h2 class="text-2xl font-semibold">{value.title}</h2>
								<p class="text-slate-600">{value.description}</p>
							</div>
						))}
					</div>
				</section>

				<section class="section-spacing bg-slate-50">
					<div class="container-responsive">
						<div class="rounded-3xl bg-white p-8 shadow-sm sm:p-10">
							<h2 class="text-2xl font-semibold">{cta.title}</h2>
							<p class="mt-3 text-slate-600">{cta.body}</p>
							<a
								class="mt-6 inline-flex items-center gap-2 rounded-full bg-slate-900 px-5 py-2 text-sm font-semibold uppercase tracking-[0.25em] text-white transition hover:bg-slate-700"
								href={cta.button.href}
							>
								{cta.button.label}
							</a>
						</div>
					</div>
				</section>
			</main>
		</div>
	</body>
</html>
