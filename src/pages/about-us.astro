---
import '../styles/global.css';
import NavBar from '../components/NavBar.astro';
import { homeContent } from '../data/homeContent';

const nav = homeContent.en.nav;
const homeHref = '/vibeperform-astro-page/';
const alternateLocaleHref = '/vibeperform-astro-page/de/ueber-uns';
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<title>About Vibeperform</title>
	</head>

	<body class="bg-white text-slate-900">
		<div class="flex min-h-screen flex-col bg-white">
			<NavBar nav={nav} homeHref={homeHref} alternateLocaleHref={alternateLocaleHref} />
			<main class="flex flex-1 flex-col gap-y-24 pb-20">
				<section class="section-spacing">
					<div class="container-responsive mx-auto max-w-4xl space-y-4 text-center">
						<p class="text-xs font-semibold uppercase tracking-[0.35em] text-slate-500 sm:text-sm">
							About us
						</p>
						<h1 class="text-4xl font-semibold md:text-5xl">Operators who ship, not just advise</h1>
						<p class="text-base text-slate-600 sm:text-lg md:text-xl">
							We are builders who have scaled products, operations, and messaging from zero to traction.
							Vibeperform helps teams rethink their workflows with AI and launch faster than traditional agency cycles.
						</p>
					</div>
				</section>

				<section class="section-spacing">
					<div class="container-responsive grid gap-8 md:grid-cols-2">
						<div class="space-y-3 rounded-3xl border border-slate-200 bg-white p-6 shadow-sm sm:p-8">
							<h2 class="text-2xl font-semibold">Outcome first</h2>
							<p class="text-slate-600">
								Every project starts with measurable goals. We help you define what success looks like and work backwards from there.
							</p>
						</div>
						<div class="space-y-3 rounded-3xl border border-slate-200 bg-white p-6 shadow-sm sm:p-8">
							<h2 class="text-2xl font-semibold">Builder mindset</h2>
							<p class="text-slate-600">
								We prototype, test, and iterate. You get tangible momentum â€” not slide decks gathering dust.
							</p>
						</div>
					</div>
				</section>

				<section class="section-spacing bg-slate-50">
					<div class="container-responsive">
						<div class="rounded-3xl bg-white p-8 shadow-sm sm:p-10">
							<h2 class="text-2xl font-semibold">Our partners</h2>
							<p class="mt-3 text-slate-600">
								We collaborate with growth, product, and operations leaders in fast-moving teams across Europe.
								Each engagement is tailored to your stack, data, and customer experience.
							</p>
							<a
								class="mt-6 inline-flex items-center gap-2 rounded-full bg-slate-900 px-5 py-2 text-sm font-semibold uppercase tracking-[0.25em] text-white transition hover:bg-slate-700"
								href="mailto:hello@vibeperform.com"
							>
								Let's talk
							</a>
						</div>
					</div>
				</section>
			</main>
		</div>
	</body>
</html>
