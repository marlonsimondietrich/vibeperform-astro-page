---
import '../styles/global.css';
import {
	Sparkles,
	FileText,
	Scale,
	Cpu,
	Users,
	BarChart3,
	Briefcase,
	Rocket,
	BadgeCheck,
	Lightbulb,
	ShieldCheck,
} from 'lucide-static';

const faviconHref = `${import.meta.env.BASE_URL}favicon.png`;

const iconMap = {
	sparkles: Sparkles,
	fileText: FileText,
	scale: Scale,
	cpu: Cpu,
	users: Users,
	barChart3: BarChart3,
	briefcase: Briefcase,
	rocket: Rocket,
	badgeCheck: BadgeCheck,
	lightbulb: Lightbulb,
	shieldCheck: ShieldCheck,
} as const;

const renderIcon = (name: keyof typeof iconMap, className: string, size = 24) =>
	iconMap[name]
		.replace('class="lucide', `class="lucide ${className}`)
		.replace('width="24"', `width="${size}"`)
		.replace('height="24"', `height="${size}"`);

const deliverables = [
	{
		icon: 'fileText',
		title: 'Use-Case-Portfolio',
		description: '10–20 Ideen, Top-3 priorisiert mit Nutzen/Komplexität.',
	},
	{
		icon: 'scale',
		title: 'Entscheidungsvorlage',
		description: 'Business-, Tech- und Risiko-Sicht je Use Case.',
	},
	{
		icon: 'cpu',
		title: 'Prototyp/PoC (optional)',
		description: 'Funktionierender Klick- oder Daten-Prototyp mit Messpunkten.',
	},
	{
		icon: 'users',
		title: 'Enablement',
		description: 'Ihr Team versteht, wo KI wirkt und wie Qualität gesichert wird.',
	},
] as const;

const processSteps = [
	{
		number: '1',
		title: 'Explore Workshop',
		subtitle: 'Wertvolle KI-Ideen finden',
		body: 'In 1 Tag (oder 2×½ Tage remote) identifizieren wir Herausforderungen, generieren Use Cases mit Karten/Leitfäden und priorisieren gemeinsam.',
	},
	{
		number: '2',
		title: 'Design Workshop',
		subtitle: 'To-Be-Szenario definieren',
		body: 'Wir vertiefen 1–3 Favoriten: Journey, Daten, „Capability Idea Napkins“, Qualität/Verifikation, KPIs. Ergebnis: umsetzbarer Zielzustand.',
	},
	{
		number: '3',
		title: 'Build Sprint (2–4 Wochen)',
		subtitle: 'Schneller Proof statt PowerPoint',
		body: 'Leichtgewichtiger Prototyp/PoC mit echten oder synthetischen Daten. Grundlage sind erprobte Ideation-Karten zu Fähigkeiten wie Zusammenfassen, Extraktion, RAG, Empfehlungen etc.',
	},
] as const;

const applicationFields = [
	{
		icon: 'barChart3',
		title: 'Vertrieb',
		items: ['Lead-Priorisierung', 'Angebots-/Mail-Assistent', 'Call-Vorbereitung'],
	},
	{
		icon: 'users',
		title: 'Kundenservice',
		items: ['Wissensassistenz (RAG)', 'Ticket-Triage', 'Antwort-Entwürfe mit Qualitätscheck'],
	},
	{
		icon: 'briefcase',
		title: 'Operations',
		items: ['Dokumenten-Extraktion', 'Prüf-/Freigabe-Assistenten', 'Standardberichte'],
	},
] as const;

const results = [
	{ icon: 'rocket', title: 'Greifbar', description: 'Demo/PoC statt Folien.' },
	{
		icon: 'badgeCheck',
		title: 'Messbar',
		description: 'Klar definierte KPIs, Akzeptanz- und Qualitätskriterien.',
	},
	{
		icon: 'lightbulb',
		title: 'Entscheidungsreif',
		description: 'Invest-/Weiter- oder Stop-Empfehlung je Use Case.',
	},
] as const;

const faqItems = [
	{
		question: 'Wie minimieren wir Risiko?',
		answer: 'Durch kleine Schritte, klare Abnahmekriterien und frühe Nutzer-Tests.',
	},
	{
		question: 'Brauchen wir viele Daten?',
		answer: 'Nein – oft reichen wenige, gezielte Quellen oder synthetische Testdaten für die ersten Prototypen.',
	},
	{
		question: 'Wie stellen wir Qualität sicher?',
		answer: 'Wir setzen auf „Trust & Verification“: Ein Mix aus Regeln, Prüf-Metriken und Human-in-the-Loop-Prozessen.',
	},
] as const;

const nextSteps = [
	{
		title: 'Intro-Call (30 Min):',
		description: 'Ziele & Rahmen klären, Kandidaten-Use-Cases sammeln.',
	},
	{
		title: 'Starttermin fixieren:',
		description: 'Explore Workshop einplanen, Stakeholder benennen, Datenzugänge definieren.',
	},
] as const;
---

<html lang="de">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href={faviconHref} />
		<title>Vibeperform Landing</title>
	</head>

	<body class="bg-slate-900 text-slate-300 antialiased selection:bg-purple-500 selection:text-white">
		<div class="relative isolate overflow-hidden min-h-screen">
			<svg
				class="absolute inset-0 -z-10 h-full w-full stroke-slate-700 [mask-image:radial-gradient(100%_100%_at_top_right,white,transparent)]"
				aria-hidden="true"
			>
				<defs>
					<pattern
						id="0787a7c5-978c-4f66-83c7-11c213f99cb7"
						width="200"
						height="200"
						x="50%"
						y="-1"
						patternUnits="userSpaceOnUse"
					>
						<path d="M.5 200V.5H200" fill="none" />
					</pattern>
				</defs>
				<rect width="100%" height="100%" stroke-width="0" fill="url(#0787a7c5-978c-4f66-83c7-11c213f99cb7)" />
			</svg>
			<div
				class="absolute left-[calc(50%-4rem)] top-10 -z-10 transform-gpu blur-3xl sm:left-[calc(50%-18rem)] lg:left-48 lg:top-[calc(50%-30rem)] xl:left-[calc(50%-24rem)]"
				aria-hidden="true"
			>
				<div
					class="aspect-[1108/632] w-[69.25rem] bg-gradient-to-r from-[#80caff] to-[#4f46e5] opacity-20"
					style="clip-path: polygon(73.6% 51.7%, 91.7% 11.8%, 100% 46.4%, 97.4% 82.2%, 92.5% 84.9%, 75.7% 64.3%, 55.3% 47.5%, 46.5% 49.4%, 45% 62.9%, 50.3% 87.2%, 21.3% 64.1%, 0.1% 100%, 1.4% 98.3%, 12.1% 75.2%, 22.1% 37.5%, 45.4% 18.9%, 29.8% 49.3%, 50.1% 57.8%, 73.6% 51.7%)"
				/>
			</div>

			<header class="absolute inset-x-0 top-0 z-50 p-6">
				<nav class="flex items-center justify-between" aria-label="Global">
					<div class="flex">
						<a href="#" class="-m-1.5 p-1.5 text-white font-bold text-xl flex items-center gap-2">
							<span
								class="inline-flex"
								aria-hidden="true"
								set:html={renderIcon('sparkles', 'h-6 w-6 text-purple-400', 24)}
							/>
							<span>Vibeperform</span>
						</a>
					</div>
				</nav>
			</header>

			<main class="mx-auto max-w-7xl px-6 pb-24 pt-32 sm:pt-48 lg:px-8">
				<section class="text-center">
					<h1 class="text-4xl font-bold tracking-tight text-white sm:text-6xl">
						KI schnell nutzbar machen – ohne große Projekte, ohne Risiko.
					</h1>
					<p class="mt-6 text-lg leading-8 text-slate-400 max-w-3xl mx-auto">
						Wir helfen Mittelständlern, konkrete KI-Use-Cases zu finden, zu bewerten und in wenigen Wochen erlebbar zu machen. Das Ergebnis: sichtbarer Nutzen und eine klare Entscheidungsgrundlage für den Rollout.
					</p>
					<div class="mt-10 flex items-center justify-center gap-x-6">
						<a
							href="mailto:hello@vibeperform.com"
							class="rounded-md bg-purple-600 px-4 py-3 text-sm font-semibold text-white shadow-sm hover:bg-purple-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-purple-600 transition-colors duration-200"
						>
							Intro-Call vereinbaren
						</a>
					</div>
				</section>

				<section class="mt-24 sm:mt-32">
					<div class="mx-auto max-w-2xl text-center">
						<h2 class="text-3xl font-bold tracking-tight text-white sm:text-4xl">Was wir liefern</h2>
						<p class="mt-4 text-lg text-slate-400">Ein klares Paket für schnelle, fundierte KI-Entscheidungen.</p>
					</div>
					<div class="mt-16 grid grid-cols-1 gap-8 md:grid-cols-2 lg:grid-cols-4">
						{deliverables.map((item) => (
							<div class="flex flex-col items-center text-center bg-slate-800/50 p-8 rounded-lg transition-transform hover:scale-105 hover:bg-slate-800">
								<div class="flex h-12 w-12 items-center justify-center rounded-lg bg-purple-600 text-white">
									<span
										class="inline-flex"
										aria-hidden="true"
										set:html={renderIcon(item.icon, 'h-6 w-6', 24)}
									/>
								</div>
								<h3 class="mt-6 text-lg font-semibold leading-8 text-white">{item.title}</h3>
								<p class="mt-2 text-base leading-7 text-slate-400">{item.description}</p>
							</div>
						))}
					</div>
				</section>

				<section class="mt-24 sm:mt-32">
					<div class="mx-auto max-w-2xl text-center">
						<h2 class="text-3xl font-bold tracking-tight text-white sm:text-4xl">
							Unser Vorgehen (bewährt & schlank)
						</h2>
					</div>
					<div class="mt-16 space-y-12">
						{processSteps.map((step) => (
							<div class="flex flex-col md:flex-row items-start gap-6">
								<div class="flex items-center justify-center h-12 w-12 rounded-full bg-purple-600 text-white font-bold text-xl flex-shrink-0">
									{step.number}
								</div>
								<div>
									<h3 class="text-xl font-semibold text-white">{step.title}</h3>
									<p class="text-purple-300 mb-2">{step.subtitle}</p>
									<p class="text-slate-400">{step.body}</p>
								</div>
							</div>
						))}
					</div>
					<div class="mt-12 text-center text-slate-400 bg-slate-800/50 rounded-lg p-4 max-w-md mx-auto">
						<span class="font-semibold text-white">Zeitbedarf intern:</span> Kernteam 6–12 Std. bis zur umsetzbaren Entscheidung.
					</div>
				</section>

				<section class="mt-24 sm:mt-32">
					<div class="mx-auto max-w-2xl text-center">
						<h2 class="text-3xl font-bold tracking-tight text-white sm:text-4xl">Typische Anwendungsfelder</h2>
					</div>
					<div class="mt-16 grid grid-cols-1 gap-8 md:grid-cols-3">
						{applicationFields.map((field) => (
							<div class="bg-slate-800/50 p-8 rounded-lg">
								<h3 class="text-xl font-semibold text-white flex items-center gap-3">
									<span
										class="inline-flex text-purple-300"
										aria-hidden="true"
										set:html={renderIcon(field.icon, 'h-6 w-6', 24)}
									/>
									{field.title}
								</h3>
								<ul class="mt-4 list-disc list-inside text-slate-400 space-y-2">
									{field.items.map((item) => (
										<li>{item}</li>
									))}
								</ul>
							</div>
						))}
					</div>
				</section>

				<section class="mt-24 sm:mt-32">
					<div class="mx-auto max-w-2xl text-center">
						<h2 class="text-3xl font-bold tracking-tight text-white sm:text-4xl">
							Ergebnisse, auf die Sie sich verlassen können
						</h2>
					</div>
					<div class="mt-16 grid grid-cols-1 gap-8 md:grid-cols-3">
						{results.map((item) => (
							<div class="flex flex-col items-center text-center bg-slate-800/50 p-8 rounded-lg transition-transform hover:scale-105 hover:bg-slate-800">
								<div class="flex h-12 w-12 items-center justify-center rounded-lg bg-purple-600 text-white">
									<span
										class="inline-flex"
										aria-hidden="true"
										set:html={renderIcon(item.icon, 'h-6 w-6', 24)}
									/>
								</div>
								<h3 class="mt-6 text-lg font-semibold leading-8 text-white">{item.title}</h3>
								<p class="mt-2 text-base leading-7 text-slate-400">{item.description}</p>
							</div>
						))}
					</div>
				</section>

				<section class="mt-24 sm:mt-32 bg-slate-800/50 rounded-lg p-8 lg:p-12 flex flex-col md:flex-row items-center gap-8">
					<div class="flex-shrink-0 text-purple-400">
						<span
							class="inline-flex"
							aria-hidden="true"
							set:html={renderIcon('shieldCheck', 'h-24 w-24', 96)}
						/>
					</div>
					<div>
						<h2 class="text-2xl font-bold tracking-tight text-white sm:text-3xl">Datenschutz &amp; Sicherheit</h2>
						<p class="mt-4 text-slate-400">
							Wir arbeiten <strong class="text-white">DSGVO-konform</strong>, nutzen <strong class="text-white">sichere Setups</strong> (z. B. isolierte Tenants, API-basierte Verarbeitung, Datenminimierung), schließen bei Bedarf <strong class="text-white">NDA</strong> und unterstützen <strong class="text-white">On-Prem/Private Cloud</strong>.
						</p>
						<p class="mt-4 font-semibold text-purple-300">
							Kein Training auf Ihren proprietären Daten ohne ausdrückliche Freigabe.
						</p>
					</div>
				</section>

				<section class="mt-24 sm:mt-32">
					<div class="mx-auto max-w-3xl text-center">
						<h2 class="text-3xl font-bold tracking-tight text-white sm:text-4xl">Für wen ist das gedacht?</h2>
						<p class="mt-4 text-lg text-slate-400">
							Geschäftsführung, Bereichsleitungen (Vertrieb/Service/Operations), IT/Data-Teams, die <strong class="text-white">schnell belastbare KI-Entscheidungen</strong> treffen wollen.
						</p>
					</div>
				</section>

				<section class="mt-24 sm:mt-32">
					<div class="mx-auto max-w-3xl">
						<h2 class="text-3xl font-bold tracking-tight text-white sm:text-4xl text-center">Nächste Schritte</h2>
						<ul role="list" class="mt-12 space-y-6 text-slate-400">
							{nextSteps.map((step) => (
								<li class="flex gap-x-3 items-start">
									<span
										class="mt-1 flex-none text-purple-400"
										aria-hidden="true"
										set:html={renderIcon('badgeCheck', 'h-5 w-5', 20)}
									/>
									<span>
										<strong class="font-semibold text-white">{step.title}</strong> {step.description}
									</span>
								</li>
							))}
						</ul>
						<div class="mt-12 flex justify-center">
							<a
								href="mailto:hello@vibeperform.com"
								class="rounded-md bg-purple-600 px-4 py-3 text-sm font-semibold text-white shadow-sm hover:bg-purple-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-purple-600 transition-colors duration-200"
							>
								Jetzt Kontakt aufnehmen
							</a>
						</div>
					</div>
				</section>

				<section class="mt-24 sm:mt-32">
					<div class="mx-auto max-w-3xl">
						<h2 class="text-3xl font-bold tracking-tight text-white sm:text-4xl text-center">Kurz-FAQ</h2>
						<div class="mt-12 space-y-8">
							{faqItems.map((item) => (
								<div class="p-6 bg-slate-800/50 rounded-lg">
									<h4 class="font-semibold text-lg text-white">{item.question}</h4>
									<p class="mt-2 text-slate-400">{item.answer}</p>
								</div>
							))}
						</div>
					</div>
				</section>
			</main>

			<footer class="mx-auto max-w-7xl px-6 lg:px-8 mt-16 sm:mt-24 pb-12">
				<div class="border-t border-slate-700 pt-8 text-center">
					<div class="mb-4">
						<p class="text-base text-slate-400">Kontakt:</p>
						<a
							href="mailto:hello@vibeperform.com"
							class="font-semibold text-purple-400 hover:text-purple-300"
						>
							hello@vibeperform.com
						</a>
						<span class="mx-2 text-slate-600">|</span>
						<a
							href="https://vibeperform.com"
							target="_blank"
							rel="noopener noreferrer"
							class="font-semibold text-purple-400 hover:text-purple-300"
						>
							vibeperform.com
						</a>
					</div>
					<p class="text-sm text-slate-500 bg-slate-800/50 p-3 rounded-md inline-block">
						Sie wollen intern weiterleiten? Dieser One-Pager fasst Nutzen, Vorgehen und nächste Schritte zusammen – teilen erwünscht.
					</p>
				</div>
			</footer>
		</div>
	</body>
</html>
