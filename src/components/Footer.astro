---
import { homeContent } from '../data/homeContent';

type Locale = 'en' | 'de';

interface Props {
	currentLocale?: Locale;
}

const { currentLocale } = Astro.props as Props;
const locale: Locale = currentLocale === 'de' ? 'de' : 'en';
const nav = homeContent[locale].nav ?? homeContent.en.nav;
const year = new Date().getFullYear();

const copy = {
	en: {
		tagline: 'We partner with operators to design, build, and embed AI that teams actually use.',
		linksLabel: 'Explore',
		contactLabel: 'Contact',
		contactIntro: 'Say hello or share what you are working on.',
		locationLabel: 'Where we work',
		location: 'Munich & remote-first across Europe',
		emailLabel: 'Email',
		actionLabel: 'Book an intro call',
		actionHref: 'https://calendar.app.google/utFQgw33PwJTiDk56',
		legal: 'All rights reserved.',
	},
	de: {
		tagline: 'Wir begleiten Mittelstandsteams dabei, Mehrwerte durch KI zu erkennen und umzusetzen.',
		linksLabel: 'Entdecken',
		contactLabel: 'Kontakt',
		contactIntro: 'Erzähl uns, woran ihr arbeitet.',
		locationLabel: 'Wo wir arbeiten',
		location: 'München & Umgebung',
		emailLabel: 'E-Mail',
		actionLabel: 'Kostenloses Gespräch buchen',
		actionHref: 'https://calendar.app.google/utFQgw33PwJTiDk56',
		legal: 'Alle Rechte vorbehalten.',
	},
} satisfies Record<
	Locale,
	Record<
		string,
		string
	>
>;

const localizedCopy = copy[locale];
---

<footer class="mt-auto border-t border-slate-200 bg-slate-900 text-slate-100">
	<div class="container-responsive py-12">
		<div class="flex flex-col gap-10 md:flex-row md:justify-between">
			<div class="max-w-sm space-y-5">
				<p class="text-xs font-semibold uppercase tracking-[0.35em] text-slate-400">{nav.brand}</p>
				<p class="text-sm leading-relaxed text-slate-300">{localizedCopy.tagline}</p>
					<a
						class="inline-flex w-fit items-center gap-2 rounded-full bg-white px-5 py-2 text-[11px] font-semibold uppercase tracking-[0.25em] text-slate-900 transition hover:bg-slate-200"
						href={localizedCopy.actionHref}
					>
						{localizedCopy.actionLabel}
					</a>
			</div>

			<div class="grid gap-10 sm:grid-cols-2">
				<div>
					<p class="text-[10px] font-semibold uppercase tracking-[0.3em] text-slate-400">{localizedCopy.linksLabel}</p>
					<ul class="mt-4 space-y-2 text-sm text-slate-200">
						{nav.links.map((link) => (
							<li>
								<a class="hover:text-white" href={link.href}>
									{link.label}
								</a>
							</li>
						))}
					</ul>
				</div>

				<div class="space-y-4 text-sm text-slate-200">
					<div>
						<p class="text-[10px] font-semibold uppercase tracking-[0.3em] text-slate-400">{localizedCopy.contactLabel}</p>
						<p class="mt-3 text-slate-300">{localizedCopy.contactIntro}</p>
					</div>
					<dl class="space-y-3">
						<div>
							<dt class="text-xs uppercase tracking-[0.3em] text-slate-500">{localizedCopy.emailLabel}</dt>
							<dd>
								<a class="hover:text-white" href="mailto:contact@vibeperform.com">contact@vibeperform.com</a>
							</dd>
						</div>
						<div>
							<dt class="text-xs uppercase tracking-[0.3em] text-slate-500">{localizedCopy.locationLabel}</dt>
							<dd class="text-slate-300">{localizedCopy.location}</dd>
						</div>
					</dl>
				</div>
			</div>
		</div>

		<div class="mt-12 border-t border-slate-800 pt-6 text-xs text-slate-500">
			<p>© {year} {nav.brand}. {localizedCopy.legal}</p>
		</div>
	</div>
</footer>
