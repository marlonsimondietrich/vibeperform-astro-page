---
type ToneClass = "rose" | "indigo" | "emerald";
type IconKey = "proposal" | "support" | "operations";

interface UseCasesCard {
  category: string;
  title: string;
  description: string;
  highlights: string[];
  toneClass: ToneClass;
  icon: IconKey;
}

interface UseCasesData {
  kicker: string;
  heading: string;
  subheading?: string;
  cards: UseCasesCard[];
}

interface Props {
  data?: UseCasesData;
}

const props = Astro.props as Props;
const data = props.data;

const toneStyles: Record<
  ToneClass,
  { bg: string; border: string; iconBg: string; iconColor: string }
> = {
  rose: {
    bg: "bg-rose-50",
    border: "border-rose-200",
    iconBg: "bg-rose-100",
    iconColor: "text-rose-700",
  },
  indigo: {
    bg: "bg-indigo-50",
    border: "border-indigo-200",
    iconBg: "bg-indigo-100",
    iconColor: "text-indigo-700",
  },
  emerald: {
    bg: "bg-emerald-50",
    border: "border-emerald-200",
    iconBg: "bg-emerald-100",
    iconColor: "text-emerald-700",
  },
};

const iconMap: Record<IconKey, string> = {
  proposal:
    '<svg viewBox="0 0 24 24" class="h-5 w-5" fill="none" stroke="currentColor" stroke-width="1.5"><path d="M4 4h10l6 6v10H4z"></path><path d="M14 4v6h6"></path><path d="M8 14h8"></path><path d="M8 18h5"></path></svg>',
  support:
    '<svg viewBox="0 0 24 24" class="h-5 w-5" fill="none" stroke="currentColor" stroke-width="1.5"><path d="M18 16v1a3 3 0 01-3 3h-3"></path><path d="M6 16v1a3 3 0 003 3h3"></path><path d="M18 10a6 6 0 00-12 0v3h12z"></path><path d="M6 19l-2 .5V10a8 8 0 0116 0v9.5L18 19"></path></svg>',
  operations:
    '<svg viewBox="0 0 24 24" class="h-5 w-5" fill="none" stroke="currentColor" stroke-width="1.5"><path d="M4 5h16"></path><path d="M6 9h12"></path><path d="M8 13h8"></path><path d="M10 17h4"></path><path d="M12 21v-4"></path><path d="M8 21h8"></path></svg>',
};

const renderIcon = (key: IconKey) => iconMap[key] ?? iconMap.proposal;
---

{
  data ? (
    <section class="section-spacing bg-gradient-to-b from-slate-50 via-white to-slate-100" id="use-cases">
      <div class="container-responsive mx-auto max-w-6xl space-y-10">
        <div class="mx-auto max-w-2xl text-center space-y-3">
          <p class="text-xs font-semibold uppercase tracking-[0.35em] text-slate-500">
            {data.kicker}
          </p>
          <h2 class="text-3xl font-semibold tracking-tight text-slate-900 sm:text-4xl">
            {data.heading}
          </h2>
          <div class="mx-auto h-1.5 w-24 rounded-full bg-gradient-to-r from-rose-400 via-indigo-400 to-emerald-400" />
          {
            data.subheading ? (
              <p class="text-sm text-slate-600 sm:text-base">
                {data.subheading}
              </p>
            ) : null
          }
        </div>

        <div class="grid gap-6 sm:grid-cols-2 lg:grid-cols-3">
          {
            data.cards.map((card, index) => {
              const tones = toneStyles[card.toneClass] ?? toneStyles.rose;

              return (
                <article
                  class={`group relative overflow-hidden rounded-2xl border ${tones.border} ${tones.bg} p-6 shadow-sm transition hover:-translate-y-0.5 hover:shadow-md sm:p-8`}
                  key={`use-case-card-${index}`}
                >
                  <div class="mb-4 flex items-center gap-3">
                    <div class={`grid h-10 w-10 place-items-center rounded-xl ${tones.iconBg} ${tones.iconColor}`}>
                      <span aria-hidden="true" set:html={renderIcon(card.icon)} />
                    </div>
                    <div>
                      <p class="text-xs uppercase tracking-wider text-slate-500">
                        {card.category}
                      </p>
                      <h3 class="text-lg font-semibold text-slate-900">
                        {card.title}
                      </h3>
                    </div>
                  </div>
                  <p class="text-sm text-slate-600 sm:text-base">
                    {card.description}
                  </p>
                  {
                    card.highlights.length ? (
                      <ul class="mt-4 space-y-2 text-sm text-slate-700">
                        {
                          card.highlights.map((highlight, highlightIndex) => (
                            <li class="flex gap-2" key={`use-case-card-${index}-highlight-${highlightIndex}`}>
                              <span class="mt-1 h-1.5 w-1.5 rounded-full bg-slate-400" />
                              <span class="flex-1">
                                {highlight}
                              </span>
                            </li>
                          ))
                        }
                      </ul>
                    ) : null
                  }
                  <div class="pointer-events-none absolute inset-x-0 bottom-0 h-1 bg-gradient-to-r from-slate-200 via-slate-300 to-slate-200 opacity-0 transition group-hover:opacity-100" />
                </article>
              );
            })
          }
        </div>
      </div>
    </section>
  ) : null
}
